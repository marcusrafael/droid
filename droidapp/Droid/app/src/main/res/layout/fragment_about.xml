<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="br.ufpb.ccae.dcx.lcc.tcc.droid.fragment.AboutFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:id="@+id/divider1"
                android:background="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tcc_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:text="Trabalho de ConclusÃ£o de Curso" />

            <TextView
                android:id="@+id/challenge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:text="@string/tcc"/>

            <View
                android:id="@+id/divider2"
                android:background="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/student"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:text="@string/student"/>

            <TextView
                android:id="@+id/student_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:text="Orientando"/>

            <View
                android:id="@+id/divider3"
                android:background="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/profa"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:text="@string/profa"/>

            <TextView
                android:id="@+id/profa_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:textColor="@color/grey"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:text="Orientadora"/>

            <View
                android:id="@+id/divider4"
                android:background="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_margin="10dp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
